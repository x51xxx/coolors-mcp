{
  "name": "@trishchuk/coolors-mcp",
  "version": "1.0.1",
  "main": "dist/CoolorsMCP.js",
  "scripts": {
    "build": "tsup",
    "lint": "prettier --check . && eslint . && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "bin": {
    "coolors-mcp": "dist/bin/server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "color",
    "colors",
    "material-design",
    "theme",
    "css",
    "hct",
    "lab",
    "rgb",
    "hsl",
    "palette",
    "gradient",
    "wcag",
    "accessibility",
    "contrast",
    "image-extraction"
  ],
  "type": "module",
  "author": "Taras Trishchuk <x51xxx@gmail.com>",
  "license": "MIT",
  "description": "Advanced color operations MCP server with Material Design 3 support, CSS theme matching, image color extraction, and accessibility compliance. Features HCT color space for perceptually accurate operations.",
  "module": "dist/coolors-mcp.js",
  "types": "dist/coolors-mcp.d.ts",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@standard-schema/spec": "^1.0.0",
    "culori": "^4.0.2",
    "execa": "^9.6.0",
    "file-type": "^21.0.0",
    "fuse.js": "^7.1.0",
    "mcp-proxy": "^5.5.4",
    "strict-event-emitter-types": "^2.0.0",
    "undici": "^7.13.0",
    "uri-templates": "^0.2.0",
    "xsschema": "0.3.5",
    "yargs": "^18.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x51xxx/coolors-mcp.git"
  },
  "homepage": "https://github.com/x51xxx/coolors-mcp",
  "bugs": {
    "url": "https://github.com/x51xxx/coolors-mcp/issues"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@sebbo2002/semantic-release-jsr"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@sebbo2002/semantic-release-jsr": "^3.0.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.2.1",
    "@types/uri-templates": "^0.1.34",
    "@types/yargs": "^17.0.33",
    "@valibot/to-json-schema": "^1.3.0",
    "@wong2/mcp-cli": "^1.13.0",
    "arktype": "^2.1.20",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eventsource-client": "^1.1.4",
    "get-port-please": "^3.2.0",
    "jiti": "^2.5.1",
    "jsr": "^0.13.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "valibot": "^1.1.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitest": "^3.2.4"
  },
  "tsup": {
    "entry": [
      "src/coolors-mcp.ts",
      "src/bin/coolors-mcp.ts",
      "src/bin/server.ts",
      "src/color/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  }
}
